{
    "background": {
        "persistent": true,
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "css": [
                "extensionStyle.css"
            ],
            "js": [
                "content.js",
                "jquery.min.js"
            ],
            "matches": [
                "https://music.yandex.ru/*",
                "http://music.yandex.ru/*"
            ]
        }
    ],
    "description": "Yandex music Loader",  
    "manifest_version": 2,
    "name": "YM Loader",
    "version": "1.0",
    "permissions": [
        "<all_urls>",
        "downloads",
        "webRequest", 
        "webRequestBlocking"
    ]
}
